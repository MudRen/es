#include <mudlib.h>

inherit WEAPON;

void create()
{    
    set_name( "blood scythe", "血镰刀" );
    add( "id", ({ "scythe" }) );
    set_short( "血镰刀" );
    set_long(@LONG
一把沾满血迹的镰刀，刀身呈现赤红色。
LONG
    );
    set( "unit", "把" );
    set( "weight", 80 );
    set( "value", ({ 800, "silver" }) );
    setup_weapon("longblade", 20,14,22);
}
