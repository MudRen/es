#include "../oldcat.h"

inherit ARMOR;

void create()
{
        set_name("worker's gloves", "工作手套");
        add( "id", ({ "gloves" }) );
        set_short("工作手套");
        set_long(
                "这是一双工作手套，对双手能提供很好的保护。\n"
        );
        set("unit","双");
        set( "type", "hands" );
        set("material","cloth") ;
        set( "armor_class", 7 );
        set( "defense_bonus", 0 );
        set( "weight", 50 );
        set( "value", ({ 50, "gold" }) );
}






