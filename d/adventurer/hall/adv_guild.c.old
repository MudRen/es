//#pragma save_binary
 
#include <mudlib.h>
 
#define BOARD "/d/adventurer/hall/adv_board"

inherit DOORS;
inherit GUILD;
 
void create()
{
	object guild_master;
	::create();
	
	set("light", 1);
	set_short( "冒险者公会" );
	set_long( @LONG
你现在位於远风镇的冒险者公会，这里随时欢迎疲倦或需要休息的冒险者
光临。在屋子的一角有座楼梯通往二楼的仓库，在出口附近你可以看到一张告
示(sign)，西边的墙上有一个闪著奇幻光芒的力场。以及有一个很大的阶梯通
往下面的一个大厅.
LONG
	);

	set("c_item_desc", ([
	"sign" : @C_SIGN
这张告示写著:
――――――――――――――――――――――――――――――――――
欢迎来到冒险者公会:
    冒险者公会是属於所有在这个世界上冒险的人，不管你是否加入了其它的
公会，这里的大门永远为你而敞开。你可以在这里训练(train) 技能或提升 (
advance)等级与属性，输入 help guild 可以得到更详细的说明。
    有关本公会的详细情形，请用 help adventurers。
――――――――――――――――――――――――――――――――――
C_SIGN
	]) );
	set("exits", ([
		"east" : "/d/noden/farwind/smain",
		"southwest" : "/d/adventurer/hall/adv_libra1", 
		"west" : "/d/wiz/wiz_hall",
		"up"   : "/d/noden/farwind/storage",
		"down" : "/d/noden/farwind/quest_room",
	]) );
	
	set( "pre_exit_func", ([
                "east" : "pre_guest_out",
                "southwest" : "pre_guest_out",
                "up" : "pre_guest_out",
                "down" : "pre_guest_out",
		"west" : "to_wiz_hall"
	]) );
	
 	/* Load up the bulletin board. */
	BOARD->frog();

	create_door("east", "west", ([
		"keyword"       : ({ "oak door", "door" }),
		"name"          : "oak door",
		"c_name"        : "橡木门",
		"c_desc"        : "一扇结实厚重的橡木门",
		"status"        : "open",
	]) );

	guild_master=new("/d/adventurer/hall/monsters/yamor");
	guild_master->move(this_object());
 	set("objects", ([
 		"map"  : "/d/noden/farwind/items/noden_map",
		"list" : "/d/noden/farwind/items/topplr_list",
	"note" : "/d/noden/farwind/items/esnote",
	]) );
	set( "no_monster", 1 );
	set_guild( "adventurer" ); 
	reset();
}

int to_wiz_hall()
{
        if( !wizardp(this_player()) ) {
                        write("对不起，只有巫师才能进去。\n");
                return 1;
        }
	write("你穿过力场，进入了巫师大厅。\n");
	return 0;
}

int pre_guest_out()
{
   if( (string)this_player()->query("name")=="guest" ) {
        write( "天神对你说: guest不能离开冒险者公会!\n" );
        return 1;
   }
   return 0;
}

void init()
{
   guild::init();
   add_action( "guest_no_fight", "kill" );
}
 
void reset()
{
        int i;
        object *player;
 
        ::reset();
        player = users();
        for( i=0; i<sizeof(player); i++ )
                "/adm/daemons/topplayer"->log_player(player[i]);
}

int clean_up()
{
		return 0;
}

int guest_no_fight()
{
   if( (string)this_player()->query("name")=="guest" ) {
        write( "天神告诉你: guest 不准打斗!\n" );
        return 1;
   }
}
