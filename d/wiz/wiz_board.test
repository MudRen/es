inherit "/std/board/bboard";

void create()
{
	bboard::create();
	set_attic_dir ("/d/wiz/data/attic");
	set_save_dir("/d/wiz/data");
	set_save_file("wiz_board");
	set_location("/d/wiz/wiz_office");
	set ("short.text", "Wizards' bulletin board");
	set ("long.text", "This is the Wizards' bulletin board, which is for common\n"
					  "purpose posts. See \"help board\" for usage.\n");
	set ("c_short.text", "巫师留言板");
	set ("c_long.text", "这是一个留言板，专供人留言纪事。详细用法请参看 help board。\n"
						"这个留言板虽然是属於巫师公会的，但任何人都欢迎在这里留言。\n");
}
