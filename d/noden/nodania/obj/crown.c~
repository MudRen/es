#include <mudlib.h>

inherit ARMOR;

void create()
{
	set_name("crown", "王冠");
	set_short("黄金王冠");
	set_long(
    "这是一顶纯金打造的王冠，上面镶著许\多珍珠玛瑙，看起来十分名贵。\n"
	);
	set( "unit", "顶" );
	set( "type", "head" );
	set( "material", "heavy_metal");
	set( "armor_class", 3 );
	set( "defense_bonus", 5 );
	set( "special_defense", ([ "fire":5, "cold":-10, "mental":5 ]) );
	set( "value", ({ 3100, "gold" }) );
	set( "weight", 40 );
	set( "no_sale", 1);
}
