
#include <mudlib.h>
inherit CONTAINER;
void create()
{
        set_name("牛皮酒袋", ({ "wineskin", "skin" }) );
                set("long", "一个牛皮缝的大酒袋，大概装得八、九升的酒。\n");
                set("unit", "个");
                set("value", 20);

}
void init()
{
        add_action("to_drink","drink");
}
int to_drink(string arg)
{
	object me;

        me = this_player();

        if( !arg || arg=="" || arg !="wine")
                tell_object(this_player(),
                "你想干什么?\n"
                );
    else {
        tell_object(this_player(),
        "你一仰头,咕噜咕噜地喝了几口酒.\n"
        );
        tell_room(this_object(),
                me->query("c_name")+"一仰头,咕噜咕噜地喝了几口酒．\n"
                , me);
	}
        return 1;
}
